<p>
  {{link-to "Person list" "people.index" }}
</p>

<h1>Person show</h1>

<p>
  <strong>First name:</strong>
  <span>{{model.firstName}}</span>
</p>

<p>
  <strong>Last name:</strong>
  <span>{{model.lastName}}</span>
</p>

<p>
  <strong>Email:</strong>
  <span>{{model.emai}}</span>
</p>

<p>
  <strong>Can Vote:</strong>
  <span>{{model.voteable}}</span>
</p>

<p>
  <strong>roles</strong>
</p>

<ul>
  {{#each model.roles as |role| }}
    <li>
      {{role.roleType}}
    </li>
  {{/each}}
</ul>

<p>
  district candidates:
</p>

<ul>
  {{#each people as |candidate|}}
    {{#if candidate.isCandidate }}
      <li>
        {{candidate.id}} - {{candidate.firstName}} {{candidate.lastName}}

        <button {{action 'vote' candidate}}> vote for {{candidate.firstName}}</button>
      </li>

    {{/if}}
  {{/each}}
</ul>
