<h1>States list</h1>

<p>
  {{link-to "New State" "states.new" }}
</p>

{{#if model.length}}
  <table>
    <thead>
      <tr>
        <th>
          Name
        </th>
        <th>
          Districts
        </th>
        <th colspan="3">
          Actions
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |state|}}
        <tr>
          <td>
            {{state.name}}
          </td>
          <td>
            <ul>
            {{#each state.districts as |district|}}
              <li>{{#link-to "districts.show" district.id}}{{district.name}}{{/link-to}}</li>
            {{/each}}
            </ul>
          </td>
          <td>
            {{link-to "Edit" "states.edit" state}}
          </td>
          <td>
            {{link-to "Show" "states.show" state}}
          </td>
          <td>
            <a href="#" {{action "remove" state}}>Remove</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p id="blankslate">
    No States found
  </p>
{{/if}}
